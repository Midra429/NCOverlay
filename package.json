    "@webext-core/messaging": "^2.3.0",
    "@xpadev-net/niconicomments": "^0.2.76",
    "color2k": "^2.0.3",
    "colord": "^2.9.3",
    "deepmerge": "^4.3.1",
    "fast-deep-equal": "^3.1.3",
    "filesize": "^11.0.13",
    "framer-motion": "^12.23.26",
    "hotkeys-js": "^4.0.0",
    "lucide-react": "^0.562.0",
    "nanoid": "^5.1.6",
    "nanoid-dictionary": "^5.0.0",
    "react": "^19.2.3",
    "react-detectable-overflow": "^0.8.0",
    "react-dom": "^19.2.3",
    "react-hotkeys-hook": "^5.2.1",
    "react-virtuoso": "^4.18.0",
    "rfdc": "^1.4.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
